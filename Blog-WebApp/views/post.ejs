<%- include("partials/header.ejs") %>

<div class="container-wrapper">
    <main class="container">
        <div class="card">
            <form action="/delete/<%= postID %>" method="POST">
                <div class="card-body">
                    <div class="row g-5">
                        <h2><%= title %></h2>
                        <p class="blog-post-meta postTitle"><%= date %> by <a href="/users/<%= postuserID %>"><%= displayName %></a></p>
                        <p class="postBody"><%= body %></p>
                    </div>
                    <% if (userID === postuserID) { %>
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this post?')">Delete</button>
                    <% } %>               
                </div>
            </form>
        </div>
        
        <% if (userID === postuserID) { %>
            <div class="card mt-4">
                <div class="card-body">
                    <h3>Edit Post</h3>
                    <form action="/edit/<%= postID %>" method="PUT">
                        <div class="mb-3">
                            <label for="title" class="form-label">Title</label>
                            <input type="text" class="form-control" id="title" name="postTitle" value="<%= title %>">
                        </div>
                        <div class="mb-3">
                            <label for="body" class="form-label">Body</label>
                            <textarea class="form-control" id="body" name="postBody"><%= body %></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </form>
                </div>
            </div>
        <% } %>
    </main>
</div>

<footer class="py-3 text-center text-body-secondary bg-body-tertiary postFooter">
    <p>Shaheer Sheeraz @ 
        <% const d = new Date(); %>
        <% const year = d.getFullYear(); %>
        <%= year %>
    </p>
</footer>
</body>
</html>
