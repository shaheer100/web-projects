<%- include("partials/header.ejs") %>

    <div class="container-wrapper">
        <main class="container">
            <div class="card">
                <div class="card-body">
                    <div class="row g-5">
                        <h2><%= title %></h2>
                        <p class="blog-post-meta postTitle"><%= date %> by <a href="/users/<%= postuserID %>"><%= displayName %></a></p>
                        <p class="postBody"><%= body %></p>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <footer class="py-3 text-center text-body-secondary bg-body-tertiary postFooter">
        <p>Shaheer Sheeraz @ 
          <% const d = new Date(); %>
          <% const year = d.getFullYear(); %>
          <%= year %>
        </p>
    </footer>
</body>
</html>
